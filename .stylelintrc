{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s", "vh", "wh", "px"]
  }
}